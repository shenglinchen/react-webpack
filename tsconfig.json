{
  "include": [
    "./src/"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    // 根路径指向的位置
    "baseUrl": ".",
    // 配置 webpack 中的快捷路径
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/modules/*": ["src/modules/*"],
      "@/store/*": ["src/story/*"]
    }
  }
}